{
	"name": "Peroni",
	"publisher": "Oakmount",
	"repository": {"url": "https://github.com/oakmount66/Peroni"},
	"displayName": "Peroni",
	"description": "Open all COBOL unit test for a given COBOL program, Compile it and run a COBOL unit test",
	"version": "0.0.2",
	"icon": "images/Peroni.png",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Peroni.showUnitTests",
				"title": "Show COBOL Unit Tests"
			},
			{
				"command": "showunittest.compileCOBOL",
				"title": "Run COBOL Unit Tests"
			},
			{
				"command": "showunittest.runUnitTests",
				"title": "Run COBOL Unit Tests"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+1 ctrl+1",
				"command": "Peroni.showUnitTests"
			},
			{
				"key": "ctrl+2 ctrl+2",
				"command": "Peroni.compileCOBOL"
			},
			{
				"key": "ctrl+3 ctrl+3",
				"command": "Peroni.runUnitTests"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
